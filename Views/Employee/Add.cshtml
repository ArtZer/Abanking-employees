@model Employee

<h2>Добавление сотрудника</h2>

@using (Html.BeginForm("Add", "Employee", FormMethod.Post))
{
    @Html.LabelFor(model => model.firstName, "Имя")
    <br />
    @Html.EditorFor(model => model.firstName)
    <br />
    <br />
    @Html.LabelFor(model => model.lastName, "Фамилия")
    <br />
    @Html.EditorFor(model => model.lastName)
    <br />
    <br />
    @Html.LabelFor(model => model.age, "Возраст")
    <br />
    @Html.EditorFor(model => model.age)
    <br />
    <br />
    @Html.LabelFor(model => model.sex, "Пол")
    <br />
    <select name="sex">
        <option value="sex">Пол</option>
        <option>М</option>
        <option>Ж</option>
    </select>
    <br />
    <br />
   
    <select name="Отдел">
        <option value="idDep">Отдел</option>
        @foreach (var department in ViewBag.department)
        {
            <option>@department.name</option>
        }
    </select>
    <br />
    <br />


    @*@Html.LabelFor(model => model.progLang, "Язык программирования")
        <br />
        @Html.EditorFor(model => model.progLang)
        <br />
        <br />*@

    <input type="submit" value="Добавить" />
}


